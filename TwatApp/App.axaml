<Application
    x:Class="TwatApp.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cv="using:TwatApp.Converters"
    xmlns:local="using:TwatApp"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="using:TwatApp.ViewModels">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.DataContext>
        <vm:AppViewModel />
    </Application.DataContext>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Styles/Resources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme Mode="Light" />
        <StyleInclude Source="/Styles/MainStyle.axaml" />
        <StyleInclude Source="/Styles/DebugStyle.axaml" />
    </Application.Styles>


    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/avalonia-logo.ico" ToolTipText="Avalonia Tray Icon ToolTip">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Command="{Binding EditorWindowCommand}" Header="Edit" />
                        <NativeMenuItem Command="{Binding ExitCommand}" Header="Exit" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>

</Application>
