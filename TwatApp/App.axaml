<Application
    x:Class="TwatApp.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TwatApp"
    xmlns:vm="using:TwatApp.ViewModels">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.DataContext>
        <vm:AppViewModel />
    </Application.DataContext>

    <Application.Styles>
        <FluentTheme Mode="Light" />
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/avalonia-logo.ico" ToolTipText="Avalonia Tray Icon ToolTip">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Command="{Binding EditorWindowCommand}" Header="Edit" />
                        <NativeMenuItem Command="{Binding ExitCommand}" Header="Exit" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>

</Application>
