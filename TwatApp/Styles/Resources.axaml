<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cv="using:TwatApp.Converters"
    xmlns:local="using:TwatApp"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="using:TwatApp.ViewModels">

    <cv:ColorLight x:Key="LightConverter" />
    <cv:ConvertGrayscale x:Key="GrayscaleConverter" />
    <cv:DisableText x:Key="DisableTextConverter" />

    <sys:Boolean x:Key="GridLines">true</sys:Boolean>

    <SolidColorBrush x:Key="Background1">#212329</SolidColorBrush>
    <SolidColorBrush x:Key="Background2">#282A32</SolidColorBrush>
    <SolidColorBrush x:Key="Background3">#3D3F46</SolidColorBrush>
    <SolidColorBrush x:Key="Background4">#6B6F7A</SolidColorBrush>
    <SolidColorBrush x:Key="Background5">#ADB0B8</SolidColorBrush>

    <sys:Double x:Key="FontSize1">40</sys:Double>
    <sys:Double x:Key="FontSize2">24</sys:Double>
    <sys:Double x:Key="FontSize3">16</sys:Double>
    <sys:Double x:Key="FontSize4">12</sys:Double>
</ResourceDictionary>
