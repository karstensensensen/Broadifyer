<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cv="using:TwatApp.Converters"
    xmlns:local="using:TwatApp"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="using:TwatApp.ViewModels">

    <cv:ColorLight x:Key="LightConverter" />
    <cv:ConvertGrayscale x:Key="GrayscaleConverter" />

    <sys:Boolean x:Key="GridLines">true</sys:Boolean>

    <Color x:Key="Color0">#1A1C21</Color>
    <Color x:Key="Color1">#212329</Color>
    <Color x:Key="Color2">#282A32</Color>
    <Color x:Key="Color3">#3D3F46</Color>
    <Color x:Key="Color4">#6B6F7A</Color>
    <Color x:Key="Color5">#ADB0B8</Color>

    <sys:Double x:Key="FontSize1">40</sys:Double>
    <sys:Double x:Key="FontSize2">24</sys:Double>
    <sys:Double x:Key="FontSize3">16</sys:Double>
    <sys:Double x:Key="FontSize4">12</sys:Double>

    <sys:Double x:Key="FocusWeight">0.9</sys:Double>

    <SolidColorBrush x:Key="MenuFlyoutPresenterBackground" Color="{StaticResource Color2}" />
</ResourceDictionary>
